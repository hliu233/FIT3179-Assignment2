{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 Cumulative_cases",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/hliu233/FIT3179-Assignment2/main/WorldMap.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/hliu233/FIT3179-Assignment2/main/WHO-COVID-19-global-dataV1.csv"
        },
        "key": "Country",
        "fields": ["Cumulative_cases", "Cumulative_deaths"]
      }
    },
    {
      "calculate": "datum.Cumulative_cases + 0.1",
      "as": "Cumulative_cases Cases"
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Cumulative_cases Cases",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Cumulative_cases", "type": "quantitative"}
    ]
  },
  "config": {}
}