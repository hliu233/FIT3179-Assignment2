{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Cumulative Cases over time",
  "width": 400,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/hliu233/FIT3179-Assignment2/main/TrendCountry.csv"
  },
  "params": [
    {
      "name": "Country_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australia",
          "China",
          "Italy",
          "The United Kingdom",
          "United States of America",
          "India",
          "Brazil"
        ],
        "labels": [
          "Show All",
          "Australia",
          "China",
          "Italy",
          "The United Kingdom",
          "United States of America",
          "India",
          "Brazil"
        ],
        "name": "Country Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Country_Selection == null || datum.Country == Country_Selection"
    }
  ],
  "mark": {"type": "line"},
  "encoding": {
    "x": {"timeUnit": "yearmonthdate", "field": "Date_reported"},
    "y": {
      "aggregate": "sum",
      "field": " Cumulative_cases",
      "type": "quantitative"
    },
    "color": {"field": " Country", "type": "nominal"},
    "tooltip": [
      {"field": " Country", "type": "nominal"},
      {"field": " New_cases", "type": "quantitative", "format": ","},
      {"field": " Cumulative_cases", "type": "quantitative", "format": ","}
    ]
  },
  "config": {}
}
